<%= form_for @notification, url: device_notification_subscriptions_path(@device, @notification), method: :post do |f| %>
  <%= f.label "Phone Number" %>
  <%= telephone_field_tag :number, nil,
    pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}",
    placeholder: "123-456-7890",
    required: true %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>